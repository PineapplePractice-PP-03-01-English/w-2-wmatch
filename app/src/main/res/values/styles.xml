<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PrimaryBigButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">345dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@drawable/bg_primary_big_button</item>
        <item name="android:textColor">@color/btn_text_primary_big</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/raleway_regular</item>
    </style>

    <style name="PrimaryBigEt">
        <item name="android:background">@drawable/bg_et_primary</item>
        <item name="android:textColor">@color/text_stroke</item>
        <item name="android:padding">20dp</item>
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="hintTextColor">@color/text_stroke</item>
    </style>

    <style name="w2wmatch.TextStyle" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="Back.TextStyle" parent="w2wmatch.TextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="IconStyle">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="BackButton">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:src">@drawable/ic_back</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="SocialNetworks">
        <item name="android:background"> @drawable/bg_social_networks </item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="key_brand_values">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:background">@drawable/bg_outline_brand</item>
    </style>

</resources>