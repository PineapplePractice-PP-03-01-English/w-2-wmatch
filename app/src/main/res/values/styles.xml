<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PrimaryBigButtonActive" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="layout_constraintWidth_percent">0.85</item>
        <item name="android:background">@drawable/bg_primary_active_big_button</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:clickable">true</item>
        <item name="android:enabled">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="PrimaryBigButtonNotActive" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="layout_constraintWidth_percent">0.85</item>
        <item name="android:background">@drawable/bg_primary_notactive_big_button</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:clickable">true</item>
        <item name="android:enabled">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="btn_poiretone_font">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="layout_constraintWidth_percent">0.85</item>
        <item name="android:background">@drawable/bg_primary_active_big_button</item>
        <item name="android:fontFamily">@font/poiretone_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
        <item name="android:enabled">true</item>
        <item name="android:focusable">true</item>

    </style>

    <style name="PrimaryBigEt">
        <item name="android:background">@drawable/bg_et_primary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">20dp</item>
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="hintTextColor">@color/text_stroke</item>
    </style>

    <style name="w2wmatch.TextStyle" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="Back.TextStyle" parent="w2wmatch.TextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_main3</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="IconStyle">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="BackButton">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:src">@drawable/ic_back</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="SocialNetworks">
        <item name="android:background">@drawable/bg_social_networks</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="key_brand_values">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:background">@drawable/bg_outline_brand</item>
    </style>

    <style name="percent_of_progress">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="banner_business">
        <item name="android:backgroundTint">@color/brand_lightblue</item>
        <item name="android:background">@drawable/bg_banner_business</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="questions_and_answers">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@drawable/bg_q_and_a</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingTop">23dp</item>
        <item name="android:paddingBottom">23dp</item>
        <item name="android:paddingEnd">23dp</item>
    </style>

    <style name="style_ic_ruble">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@drawable/bg_ruble</item>
    </style>

    <style name="left_radius_view">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@drawable/bg_community_view</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="left_radius_banner">
        <item name="android:backgroundTint">@color/brand_lightblue</item>
        <item name="android:background">@drawable/bg_q_and_a</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>

    <style name="W2WBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
<!--        <item name="android:background">@drawable/bottom_navigation_background</item>-->
        <item name="itemIconTint">@color/nav_color</item>
        <item name="itemIconSize">32dp</item>
    </style>

    <style name="FabRound">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="shape_appearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="photo_brand2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">95dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="shapeAppearance">@style/shape_appearance</item>
    </style>

    <style name="all_radius_view">
        <item name="android:backgroundTint">@color/blue_dark_bg</item>
        <item name="android:background">@drawable/bg_primary_active_big_button</item>
    </style>
</resources>