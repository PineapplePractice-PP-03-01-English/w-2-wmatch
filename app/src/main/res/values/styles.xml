<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PrimaryBigButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">345dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@drawable/bg_primary_big_button</item>
        <item name="android:textColor">@color/btn_text_primary_big</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="w2wmatch.TextStyle" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="IconStyle">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

</resources>