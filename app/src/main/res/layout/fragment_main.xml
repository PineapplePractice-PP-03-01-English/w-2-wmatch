<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.main.MainFragment">

    <TextView
        android:id="@+id/tv_header_greetings"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="19dp"
        android:gravity="center"
        android:text="Привет"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_notification"
        android:layout_width="26dp"
        android:layout_height="24dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_notification"
        app:layout_constraintBottom_toBottomOf="@+id/avatar"
        app:layout_constraintEnd_toStartOf="@id/avatar"
        app:layout_constraintTop_toTopOf="@+id/avatar" />

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_avatar"
        app:layout_constraintBottom_toBottomOf="@id/tv_header_greetings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_header_greetings" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/main_page_container"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/gray_figma_bg"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@id/main_page_bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_header_greetings" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/main_page_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:clickable="false"
        android:focusable="true"
        android:paddingTop="16dp"
        android:paddingBottom="5dp"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/main_page_bottom_navigation_bar" />


</androidx.constraintlayout.widget.ConstraintLayout>