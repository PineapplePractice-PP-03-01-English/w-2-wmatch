<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.questionnaire.photos_of_your_brand.part2.PhotosBrand2Fragment">

    <TextView
        android:id="@+id/tv_photo"
        style="@style/Back.TextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="Загрузите, пожалуйста. фото, иллюстрирующее Ваш продукт (товар или услугу) для галереи Вашего бренда"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_help_photo"/>

    <ImageView
        android:id="@+id/iv_help_photo"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_marginEnd="15dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_help"
        app:layout_constraintBottom_toBottomOf="@+id/tv_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_photo" />

    <TextView
        android:id="@+id/count_photo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="18/30"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/iv_help_photo"
        app:layout_constraintEnd_toEndOf="@id/iv_help_photo"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/photo_1"
        style="@style/photo_brand2"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/img_communiti"
        app:layout_constraintStart_toStartOf="@id/tv_photo"
        app:layout_constraintTop_toBottomOf="@id/count_photo"
        app:layout_constraintEnd_toStartOf="@id/photo_2"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/photo_2"
        style="@style/photo_brand2"
        android:layout_marginEnd="5dp"
        android:src="@drawable/img_communiti"
        app:layout_constraintStart_toEndOf="@id/photo_1"
        app:layout_constraintTop_toTopOf="@id/photo_1"
        app:layout_constraintEnd_toStartOf="@id/photo_3"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/photo_3"
        style="@style/photo_brand2"
        android:layout_marginEnd="30dp"
        android:src="@drawable/img_communiti"
        app:layout_constraintStart_toEndOf="@id/photo_2"
        app:layout_constraintTop_toTopOf="@id/photo_1"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/photo_4"
        style="@style/photo_brand2"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/img_communiti"
        app:layout_constraintStart_toStartOf="@id/tv_photo"
        app:layout_constraintTop_toBottomOf="@id/photo_1"
        app:layout_constraintEnd_toStartOf="@id/photo_5"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/photo_5"
        style="@style/photo_brand2"
        android:layout_marginEnd="5dp"
        android:src="@drawable/img_communiti"
        app:layout_constraintStart_toEndOf="@id/photo_4"
        app:layout_constraintTop_toTopOf="@id/photo_4"
        app:layout_constraintEnd_toStartOf="@id/photo_6"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/photo_6"
        style="@style/photo_brand2"
        android:src="@drawable/img_communiti"
        app:layout_constraintStart_toEndOf="@id/photo_5"
        app:layout_constraintTop_toTopOf="@id/photo_4"
        app:layout_constraintEnd_toEndOf="@id/photo_3"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/photo_7"
        style="@style/photo_brand2"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/img_communiti"
        app:layout_constraintStart_toStartOf="@id/tv_photo"
        app:layout_constraintTop_toBottomOf="@id/photo_4"
        app:layout_constraintEnd_toStartOf="@id/photo_8"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/photo_8"
        style="@style/photo_brand2"
        android:layout_marginEnd="5dp"
        android:src="@drawable/img_communiti"
        app:layout_constraintStart_toEndOf="@id/photo_7"
        app:layout_constraintTop_toTopOf="@id/photo_7"
        app:layout_constraintEnd_toStartOf="@id/photo_9"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/photo_9"
        style="@style/photo_brand2"
        android:src="@drawable/img_communiti"
        app:layout_constraintStart_toEndOf="@id/photo_8"
        app:layout_constraintTop_toTopOf="@id/photo_7"
        app:layout_constraintEnd_toEndOf="@id/photo_6"/>

    <androidx.appcompat.widget.AppCompatButton
        style="@style/PrimaryBigButtonActive"
        android:id="@+id/btn_next"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:text="Далее"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>