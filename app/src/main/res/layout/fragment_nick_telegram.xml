<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.questionnaire.nick_telegram.NickTelegramFragment">

    <TextView
        android:id="@+id/tv_nick"
        style="@style/Back.TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="48dp"
        android:textSize="14sp"
        android:text="Ваш ник в Telegram"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_help_nick"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_marginEnd="25dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_help"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_nick"
        app:layout_constraintBottom_toBottomOf="@id/tv_nick"/>

    <TextView
        android:id="@+id/count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1/30"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/iv_help_nick"
        app:layout_constraintTop_toBottomOf="@id/iv_help_nick"
        app:layout_constraintEnd_toEndOf="@id/iv_help_nick"/>

    <com.google.android.material.textfield.TextInputEditText
        style="@style/PrimaryBigEt"
        android:id="@+id/et_nick"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:hint="\@"
        android:inputType="text"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="@id/tv_nick"
        app:layout_constraintTop_toBottomOf="@id/count"/>

    <TextView
        android:id="@+id/tv_link"
        style="@style/Back.TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="14sp"
        android:text="Ссылка на Ваш блог в соцсетях"
        app:layout_constraintStart_toStartOf="@id/tv_nick"
        app:layout_constraintTop_toBottomOf="@id/et_nick"/>

    <ImageView
        android:id="@+id/iv_help_link"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_help"
        app:layout_constraintEnd_toEndOf="@id/iv_help_nick"
        app:layout_constraintTop_toTopOf="@id/tv_link"
        app:layout_constraintBottom_toBottomOf="@id/tv_link"/>

    <TextView
        android:id="@+id/count_link"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2/30"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/iv_help_link"
        app:layout_constraintTop_toBottomOf="@id/iv_help_link"
        app:layout_constraintEnd_toEndOf="@id/iv_help_link"/>

    <com.google.android.material.textfield.TextInputEditText
        style="@style/PrimaryBigEt"
        android:id="@+id/et_link"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:hint="Ссылка"
        android:inputType="text"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="@id/tv_link"
        app:layout_constraintTop_toBottomOf="@id/count_link"/>

    <TextView
        android:id="@+id/tv_add"
        style="@style/Back.TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добавить?"
        app:layout_constraintTop_toTopOf="@id/oval"
        app:layout_constraintEnd_toEndOf="@id/iv_help_nick"/>

    <View
        android:id="@+id/oval"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_oval_for_tg"
        app:layout_constraintStart_toStartOf="@id/et_link"
        app:layout_constraintTop_toBottomOf="@id/et_link" />

    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintStart_toStartOf="@id/oval"
        app:layout_constraintTop_toTopOf="@id/oval"
        app:layout_constraintEnd_toEndOf="@id/oval"
        app:layout_constraintBottom_toBottomOf="@id/oval"/>

    <TextView
        android:id="@+id/tv_geo"
        style="@style/Back.TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="14sp"
        android:text="ГЕО"
        app:layout_constraintStart_toStartOf="@id/tv_nick"
        app:layout_constraintTop_toBottomOf="@id/iv_add"/>

    <ImageView
        android:id="@+id/iv_help_geo"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_help"
        app:layout_constraintEnd_toEndOf="@id/iv_help_nick"
        app:layout_constraintTop_toTopOf="@id/tv_geo"
        app:layout_constraintBottom_toBottomOf="@id/tv_geo"/>

    <TextView
        android:id="@+id/count_geo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1/30"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/iv_help_geo"
        app:layout_constraintTop_toBottomOf="@id/iv_help_geo"
        app:layout_constraintEnd_toEndOf="@id/iv_help_geo"/>

    <com.google.android.material.textfield.TextInputEditText
        style="@style/PrimaryBigEt"
        android:id="@+id/et_geo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:hint="Город"
        android:inputType="text"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="@id/tv_link"
        app:layout_constraintTop_toBottomOf="@id/count_geo"/>

    <androidx.appcompat.widget.AppCompatButton
        style="@style/PrimaryBigButtonActive"
        android:id="@+id/btn_next"
        android:layout_marginBottom="16dp"
        android:text="Далее"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>