<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.reg.choosing_to_fill_questionnaire.ChoosingToFillQuestionnaireFragment">

    <TextView
        android:id="@+id/tv_questionnaire"
        style="@style/Back.TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="48dp"
        android:text="Анкета"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_description"
        style="@style/Back.TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Ваши данные приняты и сохранены!\n\n Теперь ваши шансы на совместный Метч увеличились!"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/tv_questionnaire"
        app:layout_constraintTop_toBottomOf="@id/tv_questionnaire" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_fill_questionnaire"
        style="@style/PrimaryBigButtonActive"
        android:layout_marginTop="45dp"
        android:clickable="true"
        android:enabled="true"
        android:focusable="true"
        android:text="Заполнить анкету"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_description" />

</androidx.constraintlayout.widget.ConstraintLayout>