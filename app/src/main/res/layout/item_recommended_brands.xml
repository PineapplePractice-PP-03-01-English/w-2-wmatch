<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:src="@drawable/img_communiti1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/brand_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_main4"
        android:fontFamily="@font/raleway_medium"
        android:text="Barbara"
        app:layout_constraintStart_toStartOf="@id/img"
        app:layout_constraintTop_toBottomOf="@id/img"/>

    <ImageView
        android:id="@+id/geo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_geo_brand"
        app:layout_constraintStart_toStartOf="@id/brand_name"
        app:layout_constraintTop_toBottomOf="@id/brand_name"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textSize="10sp"
        android:text="Москва"
        android:fontFamily="@font/raleway_regular"
        app:layout_constraintStart_toEndOf="@id/geo"
        app:layout_constraintBottom_toBottomOf="@id/geo"/>

    <ImageView
        android:id="@+id/ic_subscribes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_subscribers"
        app:layout_constraintStart_toEndOf="@id/city"
        app:layout_constraintTop_toTopOf="@id/geo"
        app:layout_constraintBottom_toBottomOf="@id/geo"/>

    <TextView
        android:id="@+id/subscribes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textSize="10sp"
        android:fontFamily="@font/raleway_regular"
        android:text="1000"
        app:layout_constraintStart_toEndOf="@id/ic_subscribes"
        app:layout_constraintBottom_toBottomOf="@id/geo"/>

</androidx.constraintlayout.widget.ConstraintLayout>